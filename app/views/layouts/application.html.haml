!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title
      -if content_for?(:title)
        =[yield(:title),@title_suffix || "_国药准字查询网"].join()
      -else
        =t('appname')
    = stylesheet_link_tag    "application", :media => "all"
    -#=javascript_tag 'var _hmt = _hmt || [];'
    = csrf_meta_tags
    = yield(:head)
    =render 'layouts/iefix'
    -#=javascript_include_tag 'http://cbjs.baidu.com/js/m.js'
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
  -@hide_ad_before = true if %w(new edit).include? action_name
  %body{:class=>@body_class}
    %header.navbar.navbar-fixed-top.navbar-inverse
      %nav.navbar-inner
        .container
          = render 'layouts/navigation'
    -if is_zhaoshang?
      .container.mt1.sub_nav
        = render :partial => 'layouts/zhaoshang'
    #main{:role => "main"}
      .container
        .content
          = render 'layouts/messages'
          -unless @hide_bread
            .breadcrumb= breadcrumbs.render :format=>:inline, :separator => '/'
          -if @col1 
            -if show_title?
              %h1#pt=yield :header
            -unless @hide_ad_before
              =slotb
            = yield
            .clearfix
            =slotf unless @hide_slotf
          -else
            -@spans ||= 9
            .row
              %div{:class=>"span#{@spans}"}
                -if show_title?
                  %h1#pt=yield :header
                =slotb unless @hide_ad_before
                = yield
                =slotf unless @hide_slotf
              .sidebar{:class=>"span#{12-@spans}"}
                =yield :sidebar
                -#-unless @liubai
                  -#.liubai
                -#=adsense 8650188641,"jx-global-side",:width=>300,:height=>600
                -unless @hide_adside
                  =ubaidu 1270008,"jx-global-side-200"
                  =usogou 194506,200,200
                  =ubaidu 1270011,"jx-global-side-2"
                = render 'layouts/sidebar' unless @hide_sidebar
      -unless is_home?                
        .belt.alert.alert-info
          = render :partial => 'layouts/footlinks_static'

      %footer
        .container
          -if is_home?
            .box
              =render "layouts/links"
          .pull-left
            &copy; 2012 www.jxjw.net  蜀ICP备12023975号-3
            -if !is_home?
              =link_to "链接","/links"
              联系 <a target="_blank" href="http://sighttp.qq.com/authd?IDKEY=0d784cb4250c9b1f2776e449b0a843fb4a9a6b876bbfaddd">QQ</a>

            =link_to "资讯",posts_url
          .pull-right
            =yield(:title) || t('appname')
    = javascript_include_tag "application"
    =render 'layouts/iefixjs'
    -#.hidden=render "layouts/tongji" if Rails.env.production?
    -if Rails.env.production?
      =render "layouts/ga"
      ='<script type="text/javascript" src="http://js.tongji.linezing.com/3090156/tongji.js"></script><noscript><a href="http://www.linezing.com"><img src="http://img.tongji.linezing.com/3090156/tongji.gif"/></a></noscript>'.html_safe

    = yield(:footer)
