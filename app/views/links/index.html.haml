-title '酷站'
-@hide_ad_before = true
-@col1 = true
-manage = can? :manage,Link
-@links.each do |context,rs|
  .box
    %h2= context.present? ? context.sub(/\d+\./,'') : "未分类"
    .sites
      -rs.each do |l|
        .site
          %img{:src=>l.favicon_url,width: 16,height: 16}
          = link_to l.name,l.url,:target=>'_blank',:rel=>l.nofollow? ? "nofollow" : nil
          -if manage
            %small
              =link_to "e",edit_link_url(l)
      .clearfix
