-@hide_bottomlinks = true
=Option.html(:linkinfo)
%p
  交换链接请联系
  <a target="_blank" href="http://wpa.qq.com/msgrd?v=3&uin=58265826&site=qq&menu=yes"><img border="0" src="http://wpa.qq.com/pa?p=2:58265826:51" alt="点击这里给我发消息" title="点击这里给我发消息"/></a>
  或#{jsemail 'tech@jxjw.net'}
  %hr
-manage = can? :manage,Link
-@links.each do |context,rs|
  .box
    %h3.head= context.present? ? context.sub(/\d+\./,'') : "未分类"
    .sites
      -rs.each do |l|
        .site
          %img{:src=>l.favicon_url,width: 16,height: 16}
          = link_to l.name,l.url,:target=>'_blank',:rel=>l.nofollow? ? "nofollow" : nil
          -if manage
            %small
              =link_to "e",edit_link_url(l)
      .clearfix
