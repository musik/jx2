-title [@yaopin.wenhao,@yaopin.shangpin_name,@yaopin.name].compact.join('_'),@yaopin.wenhao
-keywords [@yaopin.wenhao,@yaopin.shangpin_name,@yaopin.name,@yaopin.changjia_name].compact
-@desc = "#{@yaopin.wenhao}，名称#{@yaopin.name}，由位于#{@yaopin.changjia_guojia}#{@yaopin.changjia_dizhi}的#{@yaopin.changjia_name}生产，批准于#{@yaopin.pizhunri}。为#{@yaopin.jixing}#{@yaopin.leibie},规格为#{@yaopin.guige}。"
-meta_desc @desc
-@title_suffix = "_国药准字查询"
%p=@desc
=debug @yaopin if params[:debug]
%table.table.table-bordered.yaopin-single
  %tr
    %th 名称
    %td=link_to @yaopin.name,"/yaopin/#{CGI.escape @yaopin.name}/pihao"
  -%w(en wenhao yuanwenhao benweima benweima_beizhu shangpin_name changjia_name changjia_guojia changjia_dizhi guige jixing leibie pizhunri daoqiri).each do |key|
    -if @yaopin[key].present? and @yaopin[key] != '－－－－'
      %tr
        %th=t("yaopin.attrs.#{key}")
        %td=yaopin_column key,@yaopin.send(key)

.btn-group
  = link_to 'Edit', edit_yaopin_path(@yaopin),:class=>"btn" if can? :edit,@yaopin

-#-cache ['others-by-changjia_name',@yaopin.changjia_name],:expires_in=>1.day do
  -#-results = Yaopin.by_changjia(@yaopin.changjia_name).slimit(10).search
  -#-if results.present?
    -#%h3 #{@yaopin.changjia_name}生产的其它药品
    -#%p.stats 共找到#{results.total_entries}项结果
    -#%ul.oxox
      -#-results.each do |r|
        -#%li
          -#=link_to r.wenhao,r
          -#-if r.name
            -#%small=link_to r.name,"/#{CGI.escape(r.name)}"
    

-#=slotf

-content_for :footer do
  =javascript_tag "track_data('pihao','#{@yaopin.id}','#{request.referer.present? ? CGI.escape(request.referer).reverse : ""}')" if Rails.env.production?
