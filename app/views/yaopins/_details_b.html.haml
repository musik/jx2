%h1.first=@yaopin.wenhao
.slotb=ubaidu 1420632,'jx-yaopin-before'
= render :partial => 'drugs/baojia'
%p=@desc
%table.table.table-bordered.yaopin-single
  %tr
    %th 名称
    %td
      =link_to @yaopin.name,"/yaopin/#{CGI.escape @yaopin.name}/pihao"
      %small #{@drug.yaopins_count}种
  -@jibings = @drug.jibings.all
  -if @jibings.present?
    %tr
      %th 适应症
      %td
        -@jibings.each do |jibing|
          =link_to jibing.name,jibing
  -%w(en wenhao yuanwenhao benweima benweima_beizhu shangpin_nameguige jixing leibie pizhunri daoqiri).each do |key|
    -if @yaopin[key].present? and @yaopin[key] != '－－－－'
      %tr
        %th=t("yaopin.attrs.#{key}")
        %td=yaopin_column key,@yaopin.send(key)
-if @yaopin.company.present?
  %ul.unstyled.attrs
    %li
      %b 厂家
      =link_to @yaopin.company.name,company_url(@yaopin.company,subdomain: 'c')
.slotb=ubaidu 1420696,'jx-yaopin-bottom'
