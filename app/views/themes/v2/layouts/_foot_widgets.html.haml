-limit = 10
-url_key = Digest::MD5.hexdigest(request.url)[0,8]
-num ||= 50
-token = Digest::MD5.hexdigest(request.url)[0,2]
.row.foot-widgets
  .span3
    =link_to "国药准字查询",root_url,class: "biglogo"
  .span4
    -unless @jibings_section
      -cache "jibings-footer-#{num}-#{token}" do
        -jibings = Jibing.order("rand()").where("items_count > 0").limit(num)
        %h3
          常见疾病
          <a href="#{jibings_url}" rel="nofollow" class="more">更多...</a>
        %p.links
          -jibings.each do |jibing|
            %a{:href=>jibing_url(jibing),:title=>"#{jibing.name}吃什么药"}
              =jibing.name
  -cache "random-widgets-#{url_key}",:expires_in => 3.day do
    .span3
      %h3 随机药品
      -results = Yaopin.search(:order=>'@random',:per_page=>10)
      %ul.unstyled
        -results.each do |d|
          -next if d.nil?
          %li
            <a href="/yaopin/#{CGI.escape d.name}/pihao" title="#{d.name}">#{d.name.truncate(15)}</a>
    .span2
      %h3 随机批号
      %ul.unstyled
        -results.each do |yaopin|
          -next if yaopin.nil?
          %li 
            <a href="/pihao/#{CGI.escape yaopin.wenhao}" title="#{yaopin.wenhao}">#{yaopin.wenhao[4,9]}</a>

