-title "制药企业大全"
-provs = Province.all_in_neidi
-if provs.present?
  .well
    -provs.each do |p|
      =link_to p.short_name,nil,class: ""
%table
  %tr
    %th Name
    %th Short
    %th City
    %th Province
    %th Address
    %th Yaopins count
    %th
    %th
    %th

  - @companies.each do |company|
    %tr
      %td= company.name
      %td= company.short
      %td= company.city.name if company.city.present?
      %td= company.province.short_name if company.province.present?
      %td= company.address
      %td= company.yaopins_count
      %td= link_to 'Show', company
      %td= link_to 'Edit', edit_company_path(company)
      %td= link_to 'Destroy', company, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Company', new_company_path
